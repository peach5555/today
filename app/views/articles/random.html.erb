<div class="contents row">
  <div class="random center">
    <% @random.each do |article| %>
      <div class="content_post">
        <span class="name">
          <a href="">
            <span>投稿者 </span><%= article.user.nickname %>
          </a>
        </span>
        <div class="article">
          <img src="<%= article.image %>" class="content_image">
          <div class="article_main">
            <h3><%= article.title %></h3>
            <%= simple_format(article.text) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>